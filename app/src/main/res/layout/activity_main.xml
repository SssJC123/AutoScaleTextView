<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="tech.qingge.app.astv.MainActivity">

    <tech.qingge.lib.astv.AutoScaleTextView
        android:gravity="center"
        android:background="@drawable/tv_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Width150dp: This is a test text"
        app:maxTextSize="24dp"
        app:minTextSize="12dp" />

    <tech.qingge.lib.astv.AutoScaleTextView
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/tv_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Width200dp: This is a test text"
        app:maxTextSize="24dp"
        app:minTextSize="12dp" />

    <tech.qingge.lib.astv.AutoScaleTextView
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/tv_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Width match_parent: This is a test text"
        app:maxTextSize="24dp"
        app:minTextSize="12dp" />

    <tech.qingge.lib.astv.AutoScaleTextView
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/tv_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Width match_parent"
        app:maxTextSize="24dp"
        app:minTextSize="12dp" />


    <tech.qingge.lib.astv.AutoScaleTextView
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/tv_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="Width wrap_content: TextSize 14dp"
        app:maxTextSize="24dp"
        app:minTextSize="12dp" />

    <tech.qingge.lib.astv.AutoScaleTextView
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/tv_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Width wrap_content: TextSize 20dp"
        app:maxTextSize="24dp"
        app:minTextSize="12dp" />


    <tech.qingge.lib.astv.AutoScaleTextView
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/tv_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8dp"
        android:text="Width wrap_content: TextSize 8dp"
        app:maxTextSize="24dp"
        app:minTextSize="12dp" />



</LinearLayout>